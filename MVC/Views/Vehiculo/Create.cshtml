@model MVC.Models.VehiculoViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>VehiculoViewModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-group">
                <label asp-for="Matricula" class="control-label"></label>
                <input asp-for="Matricula" class="form-control" />
                <span asp-validation-for="Matricula" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdMotor" class="control-label"></label>
                <input asp-for="IdMotor" class="form-control" />
                <span asp-validation-for="IdMotor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Anio" class="control-label"></label>
                <input asp-for="Anio" class="form-control" />
                <span asp-validation-for="Anio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Color" class="control-label"></label>
                <input asp-for="Color" class="form-control" />
                <span asp-validation-for="Color" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="TipoVehiculoId" class="control-label"></label>
                <select name="TipoVehiculoId">
                    @foreach(var tipoVehiculo in Model.TipoVehiculos)
                    {
                        <option value="@tipoVehiculo.Id">@tipoVehiculo.Marca</option>
                    }
                </select>
                <span asp-validation-for="TipoVehiculoId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AseguradoraId" class="control-label"></label>
                <select name="AseguradoraId">
                    @foreach(var seguro in Model.Aseguradoras)
                    {
                        <option value="@seguro.Id">@seguro.Nombre</option>
                    }
                </select>
                <span asp-validation-for="AseguradoraId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ImagenFile" class="control-label"></label>
                <input asp-for="ImagenFile" class="form-control" />
                <span asp-validation-for="ImagenFile" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UsuarioId" class="control-label"></label>
                <select asp-for="UsuarioId" class="form-control">
                    @foreach(var cliente in Model.Usuarios)
                    {
                        @if (cliente.RolId == 1)
                        {
                            <option value="@cliente.Id">@cliente.Cedula</option>
                        }
                    }
                </select>
                <span asp-validation-for="UsuarioId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
